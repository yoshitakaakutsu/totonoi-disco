<%= render '/header' %>

<div class="container">

<h2 class="font-weight-bold d-flex align-items-center justify-content-center mt-4">投稿一覧</h2>
 <div class="col-md-12 col-lg-7 ">
    <div class="card-list-container py-5 ml-5">
      <% @posts.each do |post| %>
        <div class="card mx-auto mt-1 shadow-lg">
          <div class="card-body">
            <div class="row">
              <div class="col-lg-2">
                <%= link_to public_user_path(post.user.id) do %><%= image_tag post.user.get_profile_image(70,70), class:"rounded-circle" %><% end %>
              </div>
              <p class="card-title d-flex align-items-center justify-content-center ml-3">
                <strong><%= post.user.nickname %></strong>
              </p>
            </div>
            <div class="col-lg-10 col-xs-12">
              <p class="card-title font-weight-bold mt-3">
                <%= link_to public_post_path(post.id), class: "text-dark" do %><%= post.sauna %><% end %>
              </p>
              <p class="card-text ml-3">
                <%= post.text %>
              </p>
              <div>
                <i class="far fa-comment"></i><%= " #{post.comments.count}" %>
                <i id="good_buttons_<%= post.id %>">
                  <%= render "public/goods/good", post: post %>
                </i>
                <div class="text-left">
                  <%= post.created_at.strftime('%Y/%m/%d') %>
                </div>
              </div>
            </div>
          </div>
      <% end %>
      <%= paginate @posts %>
      </div>
    </div>

  </div>

</div>