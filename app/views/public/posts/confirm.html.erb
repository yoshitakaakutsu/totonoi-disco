<%= render '/header' %>

<div class="container">
<h1>下書き</h1>

  <div class="card-list-container py-5">
  <% @posts.each do |post| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <div class="card-body">
        <div class="row">
          <div class="col-2">
            <%= image_tag post.user.get_profile_image(70,70), class:"mt-3 rounded-circle"; %>
          </div>
          <div class="col-10">
            <p class="card-title">
              <strong><%= post.user.nickname %></strong>
            </p>
            <p class="card-title">
              サウナ名：<%= post.sauna %>
            </p>
            <p class="card-text">
              <%= post.text %>
            </p>
            <p class="card-text">
              <%= post.created_at.strftime('%Y/%m/%d') %>
            </P> 
            <%= link_to "編集する", edit_public_post_path(post.id) %> | 
            <%= link_to "削除", public_post_path(post), method: :delete %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  
  </div>
