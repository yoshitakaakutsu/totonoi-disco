<%= render '/header' %>

<div class="container">
<h2 class="font-weight-bold d-flex align-items-center justify-content-center mt-4">下書き</h2>
  
  <div class="col-md-12 col-lg-7 ">
    <div class="card-list-container py-5 ml-5">
      <% @posts.each do |post| %>
        <div class="card mx-auto mt-1 shadow-lg">
          <div class="card-body">
            <div class="row">
              <div class="col-lg-2 ">
                <%= image_tag post.user.get_profile_image(50,50), class:"mt-3 rounded-circle"; %>
              </div>
              <p class="card-title d-flex align-items-center justify-content-center ml-3">
                <strong><%= post.user.nickname %></strong>
              </p>
            </div>
            <div class="col-lg-10 col-xs-12">
              <p class="card-title font-weight-bold mt-3">             
                <%= post.sauna %>
              </p>
              <p class="card-text ml-3">
                <%= post.text %>
              </p>
              <div>
                <%= link_to "編集する", edit_public_post_path(post.id), class: "text-secondary" %> | 
                <%= link_to "削除する", public_post_path(post), method: :delete, class: "text-secondary" %>
                <div class="text-left">
                  <%= post.created_at.strftime('%Y/%m/%d') %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    </div>
  
  </div>
