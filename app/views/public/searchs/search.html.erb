<%= render '/header' %>

<div class="container">

  <% if @model == 'sauna' %>
    <h2>検索ワード：<%= @content %></h2>
    <div class="col-lg-10 col-md-12">
      <div class="card-list-container py-5">
        <% @records.each do |post| %>
          <div class="card w-50 mx-auto mt-4 shadow-lg">
            <div class="card-body">
              <div class="row">
                <div class="col-2">
                  <%= image_tag post.user.get_profile_image(70,70), class:"mt-3 rounded-circle" %>
                </div>
                <div class="col-lg-10 col-xs-12">
                  <p class="card-title">
                    <strong><%= post.user.nickname %></strong>
                  </p>
                  <p class="card-title">
                    サウナ名：<%= link_to public_post_path(post.id) do %><%= post.sauna %><% end %>
                  </p>
                  <p class="card-text">
                    <%= post.text %>
                  </p>
                  <p class="card-text">
                    <%= post.created_at.strftime('%Y/%m/%d') %>
                  </P>  
                  <%= "コメント　#{post.comments.count}件" %> 
                  <i class="far fa-heart"></i><%= "　#{post.goods.count}件" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% elsif @model == 'user' %>
    <h2>検索ワード：<%= @content %></h2>
    <% @records.each do |user| %>
      <%= link_to public_user_path(user.id) do %>
        <%= image_tag user.get_profile_image(70,70) %>
        <%= user.nickname %><br>
      <% end %>
    <% end %>
  <% else %>
  　<h2>検索ワード：<%= @content %></h2>
    <div class="col-lg-10 col-md-12">
      <div class="card-list-container py-5">
        <% @records.each do |post| %>
        <div class="card w-50 mx-auto mt-4 shadow-lg">
          <div class="card-body">
            <div class="row">
              <div class="col-2">
                <%= image_tag post.user.get_profile_image(70,70), class:"mt-3 rounded-circle" %>
              </div>
              <div class="col-lg-10 col-xs-12">
                <p class="card-title">
                  <strong><%= post.user.nickname %></strong>
                </p>
                <p class="card-title">
                  サウナ名：<%= link_to public_post_path(post.id) do %><%= post.sauna %><% end %>
                </p>
                <p class="card-text">
                  <%= post.text %>
                </p>
                <p class="card-text">
                  <%= post.created_at.strftime('%Y/%m/%d') %>
                </P>  
                <%= "コメント　#{post.comments.count}件" %> 
                <i class="far fa-heart"></i><%= "　#{post.goods.count}件" %>
              </div>
            </div>
          </div>
        </div>  
        <% end %>
      </div>
    </div>
  <% end %>
  
  </div>



