<%= render '/header' %>

<div class="container">

  <h2 class="font-weight-bold d-flex align-items-center justify-content-center mb-4">プロフィール編集</h2>

    <%= form_with model: @user,url: public_user_path(@user), method: :patch do |f| %>
      <div class="field d-flex align-items-center justify-content-center">
        <%= f.label :名前（性）, class: "col-sm-6 col-lg-3 col-form-label", class: "col-sm-6 col-lg-3 col-form-label font-weight-bold" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>
      
      <div class="field d-flex align-items-center justify-content-center">
        <%= f.label :名前（名）, class: "col-sm-6 col-lg-3 col-form-label", class: "col-sm-6 col-lg-3 col-form-label font-weight-bold" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>

      <div class="field d-flex align-items-center justify-content-center">
        <%= f.label :フリガナ（セイ）, class: "col-sm-6 col-lg-3 col-form-label  font-weight-bold" %>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      </div>
      
      <div class="field d-flex align-items-center justify-content-center">
        <%= f.label :フリガナ（メイ）, class: "col-sm-6 col-lg-3 col-form-label  font-weight-bold" %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </div>
  
      <div class="field d-flex align-items-center justify-content-center">
        <%= f.label :ニックネーム, class: "col-sm-6 col-lg-3 col-form-label  font-weight-bold" %>
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
      </div>
  

      <div class="field d-flex align-items-center justify-content-center">
        <%= f.label :メールアドレス, class: "col-sm-6 col-lg-3 col-form-label  font-weight-bold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      
      <div class="field d-flex align-items-center justify-content-center">
        <%= f.label :プロフィール画像, class: "col-sm-6 col-lg-3 col-form-label  font-weight-bold" %>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      
      <div class="actions ml-3 mt-3 d-flex align-items-center justify-content-center">
        <%= f.submit "変更を保存" %>
      </div>
      
      <div class="actions mt-3 d-flex align-items-center justify-content-center">
        <%= link_to "退会する", withdraw_public_users_path, method: :patch, "data-confirm" => "本当に退会しますか？", class: "btn btn-danger ml-3" %>
      </div>
    <% end %>

</div>