<%= render '/header' %>

<div class="container">

    <h2>プロフィール編集</h2>

    <%= form_with model: @user,url: public_user_path(@user), method: :patch do |f| %>
      <div class="field">
        <%= f.label :名前, class: "col-3 col-form-label" %>
        (性)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "ml-3" %>
        (名)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "ml-4" %>
      </div>

      <div class="field">
        <%= f.label :フリガナ, class: "col-3 col-form-label" %>
        (セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
        (メイ) <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </div>
  
      <div class="field">
        <%= f.label :ニックネーム, class: "col-3 col-form-label" %>
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
      </div>
  

      <div class="field">
        <%= f.label :メールアドレス, class: "col-3 col-form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      
      <label class="col-3 col-form-label" for="inputImage">プロフィール画像</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  </br>
        <%= f.submit "変更を保存" %>
        <%= link_to "退会する", withdraw_public_users_path, method: :patch, "data-confirm" => "本当に退会しますか？", class: "btn btn-danger ml-3" %>
    <% end %>

</div>