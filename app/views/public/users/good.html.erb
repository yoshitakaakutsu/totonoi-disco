<%= render '/header' %>

<div class="container">

  <h1>いいね一覧</h1>
  
  <div class="card-list-container py-5">
        <% @good_posts.each do |post| %>
        <div class="card w-50 mx-auto mt-4 shadow-lg">
          <div class="card-body">
            <div class="row">
              <div class="col-2">
                <%= image_tag post.user.get_profile_image(70,70), class:"mt-3 rounded-circle"; %>
              </div>
              <div class="col-10">
                <p class="card-title">
                  <strong><%= post.user.nickname %></strong>
                </p>
                <p class="card-title">
                  サウナ名：<%= link_to public_post_path(post.id) do %><%= post.sauna %><% end %>
                </p>
                <p class="card-text">
                  <%= post.text %>
                </p>
                <%= "コメント　#{post.comments.count}件" %> 
                <i class="far fa-heart"></i><%= "　#{post.goods.count}件" %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>

  </div>