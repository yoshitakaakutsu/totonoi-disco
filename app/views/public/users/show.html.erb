<%= render '/header' %>

<div class="container">
  <h1>マイページ</h1>

  <div class="row">
    <div class="col-sm-12 col-lg-4">
 
      <div>
        <%= image_tag @user.get_profile_image(80,80), class:"mt-3 rounded-circle"; %>
      </div>
      
      <table class="table">
        <tr>
          <th>ニックネーム</th>
          <td><%= @user.nickname %></td>
        </tr>
    　</table>
    　<p>
    　<% if @user == current_user %>
        <%= link_to "プロフィール編集", edit_public_user_path(@user) %>  | 
      <% end %> <%= link_to "いいね一覧", good_public_user_path(current_user.id) %>
      </p>
      
      <div>
        <%= month_calendar events: @records do |date, records| %>
          <%= date.day %>
          <% records.each do |record| %>
          <div>
            <%= link_to record.totonoi_ratio, public_record_path(record.id) %>%
          </div>
          <% end %>
        <% end %>
      </div>
      
      <div>
        
      </div>
    </div>
    
    



    <div class="col-xs-12 col-lg-8">
      <div class="card-list-container py-5">
        <% @post.each do |post| %>
        <div class="card w-50 mx-auto mt-4 shadow-lg">
          <div class="card-body">
            <div class="row">
              <div class="col-lg-2 col-xs-8">
                <%= image_tag post.user.get_profile_image(70,70), class:"mt-3 rounded-circle"; %>
              </div>
              <div class="col-lg-10 col-xs-12">
                <p class="card-title">
                  <strong><%= post.user.nickname %></strong>
                </p>
                <p class="card-title">
                  サウナ名：<%= link_to public_post_path(post.id) do %><%= post.sauna %><% end %>
                </p>
                <p class="card-text">
                  <%= post.text %>
                </p>
                <p class="card-text">
                  <%= post.created_at.strftime('%Y/%m/%d') %>
                </P>  
                <%= "コメント　#{post.comments.count}件" %> 
                <i class="far fa-heart"></i><%= "　#{post.goods.count}件" %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
        <%= paginate @post %>
      </div>
    </div>
    
  </div>
</div>
 