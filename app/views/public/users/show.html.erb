<%= render '/header' %>

<div class="container">
  <h1>マイページ</h1>

  <div class="row">
    <div class="col-4">
 
      <div>
        <%= image_tag @user.get_profile_image(80,80), class:"mt-3 rounded-circle"; %>
      </div>
      
      <table class="table">
        <tr>
          <th>ニックネーム</th>
          <td><%= @user.nickname %></td>
        </tr>
        <tr>
          <th>名前</th>
          <td><%= @user.last_name %><%= @user.first_name %></td>
        </tr>
        <tr>
          <th>名前（フリガナ）</th>
          <td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
    　</table>
    　<p>
        <%= link_to "プロフィール編集", edit_public_user_path(@user) %> | <%= link_to "いいね一覧", good_public_user_path(current_user.id) %>
      </p>
    </div>



    <div class="col-8">
      <div class="card-list-container py-5">
        <% @post.each do |post| %>
        <div class="card w-50 mx-auto mt-4 shadow-lg">
          <div class="card-body">
            <div class="row">
              <div class="col-2">
                <%= image_tag post.user.get_profile_image(70,70), class:"mt-3 rounded-circle"; %>
              </div>
              <div class="col-10">
                <p class="card-title">
                  <strong><%= post.user.nickname %></strong>
                </p>
                <p class="card-title">
                  サウナ名：<%= link_to public_post_path(post.id) do %><%= post.sauna %><% end %>
                </p>
                <p class="card-text">
                  <%= post.text %>
                </p>
                <p class="card-text">
                  <%= post.created_at.strftime('%Y/%m/%d') %>
                </P>  
                <%= "コメント　#{post.comments.count}件" %> 
                <i class="far fa-heart"></i><%= "　#{post.goods.count}件" %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    
  </div>
</div>
 