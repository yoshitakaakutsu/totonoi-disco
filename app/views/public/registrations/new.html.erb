<h2>会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前, class: "col-3 col-form-label" %>
    (性)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "ml-3" %>
    (名)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "ml-4" %>
  </div>

  <div class="field">
    <%= f.label :フリガナ, class: "col-3 col-form-label" %>
    (セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    (メイ) <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>
  
  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.email_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>
  

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認用） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
