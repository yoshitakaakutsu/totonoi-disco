<%= render '/header' %>

<div class="container">
  <h2 class="font-weight-bold d-flex align-items-center justify-content-center mb-4">会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field d-flex align-items-center justify-content-center">
      <%= f.label :名前（性）, class: "col-sm-6 col-lg-3 col-form-label font-weight-bold" %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "ml-5" %>
    </div>
    
    <div class="field d-flex align-items-center justify-content-center">
      <%= f.label :名前（名）, class: "col-sm-6 col-lg-3 col-form-label font-weight-bold" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "ml-5" %>
    </div>

    <div class="field d-flex align-items-center justify-content-center">
      <%= f.label :フリガナ（セイ）, class: "col-sm-6 col-lg-3 col-form-label font-weight-bold" %>
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "ml-5" %>
    </div>
    
    <div class="field d-flex align-items-center justify-content-center">
      <%= f.label :フリガナ（メイ）, class: "col-sm-6 col-lg-3 col-form-label font-weight-bold" %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "ml-5" %>
    </div>
    
  
    <div class="field d-flex align-items-center justify-content-center">
      <%= f.label :ニックネーム, class: "col-sm-6 col-lg-3 col-form-label font-weight-bold" %></br>
      <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "ml-5" %></br>
    </div>
  

    <div class="field d-flex align-items-center justify-content-center">
      <%= f.label :メールアドレス, class: "col-sm-6 col-lg-3 col-form-label font-weight-bold" %></br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ml-5" %></br>
    </div>

    <div class="field d-flex align-items-center justify-content-center">
      <%= f.label :パスワード（6文字以上）, class: "col-sm-6 col-lg-3 col-form-label font-weight-bold"%></br>
      <%= f.password_field :password, autocomplete: "new-password", class: "ml-5" %></br>
    </div>

    <div class="field d-flex align-items-center justify-content-center">
      <%= f.label :パスワード（確認用）, class: "col-sm-6 col-lg-3 col-form-label font-weight-bold" %></br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "ml-5" %>
    </div>

    <div class="actions ml-4 mt-3 d-flex align-items-center justify-content-center">
      <%= f.submit "登録" %>
    </div>
  <% end %>
  
  <div class="ml-5 d-flex align-items-center justify-content-center">
    <%= render "public/shared/links"%>
  </div>


</div>
