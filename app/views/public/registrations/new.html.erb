<%= render '/header' %>

<div class="container">
  <h2>会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :名前, class: "col-sm-12 col-lg-3 col-form-label" %>
      (性)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "ml-3" %>
      (名)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "ml-4" %>
    </div>

    <div class="field">
      <%= f.label :フリガナ, class: "col-sm-12 col-lg-3 col-form-label" %>
      (セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      (メイ) <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </div>
  
    <div class="field">
      <%= f.label :ニックネーム, class: "col-sm-12 col-lg-3 col-form-label" %>
      <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "ml-5" %>
    </div>
  

    <div class="field">
      <%= f.label :メールアドレス, class: "col-sm-12 col-lg-3 col-form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ml-5" %>
    </div>

    <div class="field">
      <%= f.label :パスワード（6文字以上）, class: "col-sm-12 col-lg-3 col-form-label"%>
      <%= f.password_field :password, autocomplete: "new-password", class: "ml-5" %>
    </div>

    <div class="field">
      <%= f.label :パスワード（確認用）, class: "col-sm-12 col-lg-3 col-form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "ml-5" %>
    </div>

    <div class="actions col-8">
      <%= f.submit "登録" %>
    </div>
  <% end %>

  <%= render "public/shared/links" %>

</div>
