<%= render '/header' %>

<div class="container">
  
<h2 class="font-weight-bold d-flex align-items-center justify-content-center mt-4"1>投稿一覧</h1>

<div class="col-md-12 col-lg-7 ">
    <div class="card-list-container py-5 ml-5">
      <% @posts.each do |post| %>
        <div class="card mx-auto mt-1 shadow-lg">
          <div class="card-body">
            <div class="row">
              <div class="col-lg-2">
                <%= link_to admin_user_path(post.user.id) do %><%= image_tag post.user.get_profile_image(70,70), class:"rounded-circle" %><% end %>
              </div>
              <p class="card-title d-flex align-items-center justify-content-center ml-3">  
                <strong><%= post.user.nickname %></strong>
              </p>
            </div>
            <div class="col-lg-10 col-xs-12">
              <p class="card-title font-weight-bold mt-3">
                <%= link_to admin_post_path(post.id), class: "text-dark" do %><%= post.sauna %><% end %>
              </p>
              <p class="card-text ml-3">
                <%= post.text %>
              </p>
              <div>
                <i class="far fa-comment"></i><%= " #{post.comments.count}" %> 
                <i class="far fa-heart ml-4"></i><%= " #{post.goods.count}" %>
                <div class="text-left">
                  <%= post.created_at.strftime('%Y/%m/%d') %>
                </div>
              </div>
              <p class="mt-3">
                <%= link_to "削除", admin_post_path(post), method: :delete, class: "text-dark" %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
      <%= paginate @posts %>
     </div>
  </div>

</div>