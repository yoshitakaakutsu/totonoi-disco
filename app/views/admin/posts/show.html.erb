<%= render '/header' %>

<div class="container">

<h1>投稿詳細</h1>

  <div class="card-list-container py-5">
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <div class="card-body">
        <div class="row">
          <div class="col-2">
            <%= image_tag @post.user.get_profile_image(70,70), class:"mt-3 rounded-circle"; %>
          </div>
          <div class="col-10">
            <p class="card-title">
              <strong><%= @post.user.nickname %></strong>
            </p>
            <p class="card-title">
              サウナ名：<%= link_to public_post_path(@post.id) do %><%= @post.sauna %><% end %>
            </p>
            <p class="card-text">
              <%= @post.text %>
            </p>
            <p class="card-text">
              <%= @post.created_at.strftime('%Y/%m/%d') %>
            </P>  
            <%= "コメント　#{@post.comments.count}件" %> 
            <i class="far fa-heart"></i><%= "　#{@post.goods.count}件" %>
            <p>
              <%= link_to "削除する", public_post_path(@post), method: :delete %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

　<div class="card-list-container py-5">
    <% @post.comments.each do |comment| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <div class="card-body">
        <div class="row">
          <div class="col-2">
            <%= image_tag comment.user.get_profile_image(70,70), class:"mt-3 rounded-circle"; %>
          </div>
          <div class="col-10">
            <p class="card-title">
              <strong><%= comment.user.nickname %></strong>
            </p>
            <p class="card-text">
              <%= comment.comment %>
            </p>
            <p class="card-text">
              <%= comment.created_at.strftime('%Y/%m/%d') %>
            </P>  
            <p class="card-text">
              <%= link_to "削除", public_post_comment_path(comment.post, comment), method: :delete %>
            </P> 
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>

</div>