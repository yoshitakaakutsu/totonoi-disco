<%= render '/header' %>

<div class="container">

<h2 class="font-weight-bold d-flex align-items-center justify-content-center mt-4">投稿詳細</h2>

  <div class="col-md-12 col-lg-7 ">
    <div class="card-list-container py-5 ml-5">
      <div class="card mx-auto mt-1 shadow-lg">
        <div class="card-body">
          <div class="row">
            <div class="col-lg-2">
              <%= link_to admin_user_path(@post.user.id) do %><%= image_tag @post.user.get_profile_image(70,70), class:"mt-3 rounded-circle" %><% end %>
            </div>
            <p class="card-title d-flex align-items-center justify-content-center ml-3">  
              <strong><%= @post.user.nickname %></strong>
            </p>
          </div>
          <div class="col-lg-10 col-xs-12">
            <p class="card-title font-weight-bold mt-3">
              <%= @post.sauna %>
            </p>
            <p class="card-text ml-3">
              <%= @post.text %>
            </p>
            <div>
              <i class="far fa-comment"></i><%= " #{@post.comments.count}" %> 
              <i class="far fa-heart"></i><%= "　#{@post.goods.count}" %>
              <div class="text-left mt-3">
                <%= @post.created_at.strftime('%Y/%m/%d') %>
              </div>
              <p class="mt-3">
                <%= link_to "削除", admin_post_path(@post), method: :delete, class: "text-dark" %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="card-list-container py-5 ml-5">
      <% @post.comments.each do |comment| %>
        <div class="card mx-auto mt-1 shadow-lg">
          <div class="card-body">
            <div class="row">
              <div class="col-lg-2">
                <%= link_to admin_user_path(comment.user.id) do %><%= image_tag comment.user.get_profile_image(70,70), class:"rounded-circle" %><% end %>
              </div>
              <p class="card-title d-flex align-items-center justify-content-center ml-3">  
                <strong><%= comment.user.nickname %></strong>
              </p>
            </div>
            <div class="col-lg-10 col-xs-12">
              <p class="card-text ml-3 mt-4">
                <%= comment.comment %>
              </p>
              <div>
                <div class="text-left">
                  <%= comment.created_at.strftime('%Y/%m/%d') %>
                </div>
                <p class="mt-3">
                  <%= link_to "削除", public_post_comment_path(comment.post, comment), method: :delete, class: "text-dark" %>
                </P> 
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>