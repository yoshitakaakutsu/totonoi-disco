<%= render '/header' %>

<div class="container">
  
  <h2 class="font-weight-bold d-flex align-items-center justify-content-center mb-4">管理者登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  

    <div class="field d-flex align-items-center justify-content-center">
      <%= f.label :メールアドレス, class: "col-sm-6 col-lg-3 col-form-label font-weight-bold" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ml-5" %>
    </div>

    <div class="field d-flex align-items-center justify-content-center">
      <%= f.label :パスワード（6文字以上）, class: "col-sm-6 col-lg-3 col-form-label font-weight-bold" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "ml-5" %>
    </div>

    <div class="field d-flex align-items-center justify-content-center">
      <%= f.label :パスワード（確認用）, class: "col-sm-6 col-lg-3 col-form-label font-weight-bold" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "ml-5" %>
    </div>

    <div class="actions ml-4 mt-3 d-flex align-items-center justify-content-center">
      <%= f.submit "登録" %>
    </div>
  <% end %>
  
  <div class="ml-5 d-flex align-items-center justify-content-center">
    <%= render "admin/shared/links" %>
  </div>

</div>
