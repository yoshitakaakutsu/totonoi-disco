<%= render '/header' %>

<div class="container">

  <h3 class="font-weight-bold d-flex align-items-center justify-content-center mt-4">会員一覧</h3>

  <table class="table col-sm12 col-lg-10 offset-md-1">
    <thead>
      <tr>
        <th class="table-secondary">会員ID</th>
        <th class="table-secondary">氏名</th>
        <th class="table-secondary">ニックネーム</th>
        <th class="table-secondary">メールアドレス</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td>
            <%= link_to admin_user_path(user.id), class: "text-dark" do %>
              <%= user.last_name %><%= user.first_name %>
            <% end %>
          </td>
          <td><%= user.nickname %></td>
          <td><%= user.email %></td>
      <% end %>
      <%= paginate @users %>
    </tbody>
  <table>

</div>