<%= render '/header' %>

<div class="container">
  <h3 class="ml-5 mt-3 mb-5 bg-light pl-2 pr-2 pt-2 col-4"><%= @user.last_name %><%= @user.first_name %>さんの会員詳細</h3>
  
  <div class="row">
    <div class="col-4">
      <table class="table table-borderless" style="hight: 150">
        <tr>
          <th style="width: 40%">会員ID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @user.last_name %><%= @user.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
        </tr>
        <tr>
          <th>ニックネーム</th>
          <td><%= @user.nickname %></td>
　      </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @user.is_deleted ? '退会' : '有効' %></td>
        </tr>
        <tr>
          <th></th>
          <td>
            <%= link_to "編集する", edit_admin_user_path, class: "btn btn-success" %>
          </td>
        </tr>
      </table>
    </div>
      
    <div class="col-8">
      <div class="card-list-container py-5">
        <% @post.each do |post| %>
        <div class="card w-50 mx-auto mt-4 shadow-lg">
          <div class="card-body">
            <div class="row">
              <div class="col-2">
                <%= image_tag post.user.get_profile_image(70,70), class:"mt-3 rounded-circle"; %>
              </div>
              <div class="col-10">
                <p class="card-title">
                  <strong><%= post.user.nickname %></strong>
                </p>
                <p class="card-title">
                  サウナ名：<%= link_to public_post_path(post.id) do %><%= post.sauna %><% end %>
                </p>
                <p class="card-text">
                  <%= post.text %>
                </p>
                <p class="card-text">
                  <%= post.created_at.strftime('%Y/%m/%d') %>
                </P>  
                <%= "コメント　#{post.comments.count}件" %> 
                <i class="far fa-heart"></i><%= "　#{post.goods.count}件" %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>