<%= render '/header' %>

<div class="container">
  <h3 class="ml-5 mt-3 mb-5 bg-light pl-2 pr-2 pt-2 col-4"><%= @user.last_name %><%= @user.first_name %>さんの会員詳細</h3>

<table class="table table-borderless" style="hight: 150">
  <tr>
    <th style="width: 20%">会員ID</th>
    <td><%= @user.id %></td>
  </tr>
  <tr>
    <th>氏名</th>
    <td><%= @user.last_name %><%= @user.first_name %></td>
  </tr>
  <tr>
    <th>フリガナ</th>
    <td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
  </tr>
  <tr>
    <th>ニックネーム</th>
    <td><%= @user.nickname %></td>
　</tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @user.is_deleted ? '退会' : '有効' %></td>
  </tr>

  <tr>
    <th></th>
    <td>
      <%= link_to "編集する", edit_admin_user_path, class: "btn btn-success" %>
      <%= link_to "会員一覧に戻る", admin_users_path, class: "btn btn-primary offset-md-2" %>
    </td>
  </tr>

</table>