<%= render '/header' %>

<div class="container">
  
  <div class="background"> 
  </div>
  
    <h2>みんなのサ活</h2>
    <h5 class="ml-3">サウナに行った記録をみんなで共有しよう！</h5>

  <div class="card-list-container py-5">
    <% @posts.each do |post| %>
      <div class="card w-50 mx-auto mt-4 shadow-lg">
        <div class="card-body">
          <div class="row">
            <div class="col-2">
              <%= image_tag post.user.get_profile_image(70,70), class:"mt-3 rounded-circle"; %>
            </div>
            <div class="col-10">
                <p class="card-title">
                  <strong><%= post.user.nickname %></strong>
                </p>
                <p class="card-title">
                  サウナ名：<%= post.sauna %>
                </p>
                <p class="card-text">
                  <%= post.text %>
                </p>
                <p class="card-text">
                  <%= post.created_at.strftime('%Y/%m/%d') %>
                </P>  
                <%= "コメント　#{post.comments.count}件" %> 
                <i class="far fa-heart"></i><%= "　#{post.goods.count}件" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <%= paginate @posts %>
  </div>

</div>